      <th>Local de Desembarque</th>
    </tr>
    <% @bus_travel.passenger_trips.each do |passenger| %>
      <tr>
          <td><%= passenger.passenger.full_name %></td>
          <td><%= passenger.passenger.date_of_birth.strftime("%d/%m/%Y") %></td>
          <td><%= passenger.passenger.gender %></td>
          <td><%= passenger.passenger.cpf %></td>
          <td><%= passenger.passenger.identification_number %></td>
          <td><%= passenger.passenger.identification_state %></td>
          <td><%= passenger.seat %></td>
