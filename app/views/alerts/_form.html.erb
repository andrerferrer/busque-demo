

<div class="container">
  <%= simple_form_for(@alert) do |f| %>
    <!-- <div class="form-inputs"> -->
      <%#= f.association :passenger, collection: Passenger.where(role: 'clerk'), label_method: :email %>
    <!-- </div> -->
    <div class="form-inputs">
      <%= f.input :felony, :collection => ["Tráfico de Drogas",
                                       "Tráfico de Pessoas",
                                       "Tráfico de Armas",
                                       "Contrabando",
                                       "Descaminho",
                                       "Crime Ambiental",
                                       "Outros"],
                  :input_html => {:class => 'selectpicker'},
                  :label => 'Natureza',
                  prompt: "escolha uma opção" %>
    </div>
    <div class="form-inputs">
      <%= f.input :description, label: "Descrição" %>
    </div>
    <div class="form-inputs">
      <h6>nível de alerta</h6>
      <div>
        <%= f.check_box :level %>
        <%= f.label :amarelo %>
      </div>
      <div>
        <%= f.check_box :level %>
        <%= f.label :vermelho %>
      </div>
    </div>
    <div class="form-actions text-right">
       <%= f.button :submit, value: "Salvar", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
